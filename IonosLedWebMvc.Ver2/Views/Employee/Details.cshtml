@model IonosLedWebMvc.Ver2.Dtos.EmployeeDto

@{
    ViewData["Title"] = "DetailsEmployeePage";
}

<h1>Детализация по сотруднику</h1>

<div>
    <h4>Данные:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>
    <hr />
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary min-margin-top">Редактировать</a>
        <br />
        <a asp-action="Index">Назад к списку</a>
    </div>

    <h5 style="margin-top:18px">События по сотруднику @Model.Name за поледний месяц</h5>
    <div style="color:blue; font-size:18px;">
        Количество событий: @Model.UserEventsDto.Count
    </div>
    @if (Model.UserEventsDto.Count > 0) {
        <table class="table table-bordered align-content-center table-sm w-auto">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEventsDto[0].Ts)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEventsDto[0].Event)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UserEventsDto)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ts)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Event)
                        </td>
                </tr>
                }
            </tbody>
        </table>
    }

</div>


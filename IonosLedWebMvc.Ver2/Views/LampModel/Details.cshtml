@model IonosLedWebMvc.Ver2.Dtos.LampModelDto

@{
    ViewData["Title"] = "Details";
}

<h1>Детализация</h1>

<div>
    <h4>Даные модели:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd class="col-sm-10 fw-weight-bold">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sections)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sections)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CutPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CutPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrillPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrillPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MountPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MountPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SolderPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SolderPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssemblyPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssemblyPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CheckPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheckPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>

    <h5 style="margin-top: 24px">Поиск всех выпущенных светильников данной модели в период</h5>

    <form asp-action="IndexGetPost" class="row gy-2 gx-3 align-items-center">
        <div class="col-auto">
            <div class="input-group">
                <div class="input-group-text"> C </div>
                <input name="startDate" class="form-control" value="@ViewBag.StartDate"
                       type="datetime-local"
                       min="2020-01-01T00:00"
                       max="2030-01-01T00:00" />
            </div>
        </div>

        <div class="col-auto">
            <div class="input-group">
                <div class="input-group-text"> По </div>
                <input name="endDate" class="form-control" value="@ViewBag.EndDate"
                       type="datetime-local"
                       min="2020-01-01T00:00"
                       max="2030-01-01T00:00" />
            </div>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Применить</button>
        </div>

    </form>


</div>
